# -*- coding: utf-8 -*-

# jeu du yams
from yams_goessel_func import *
import random
alea = []
for i in range (5):
    alea.append(random.randint(1, 6))
print(alea)
while 1:
    rejoue_1=input('on en rejoue combien ?')
    rejoue_1=change('int',rejoue_1)
    if type(rejoue_1) is int:
        break
for i in range(rejoue_1):
    while 1:
        k=input('lequel ?')
        change('int',k)
        if type(k) is int:
            break
    alea[k]=random.randint(1, 6)
print(alea)
